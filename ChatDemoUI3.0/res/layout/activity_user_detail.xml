                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信号 : wwerijowjeori"/>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
