<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_personal_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_personal_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/default_avatar"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/tv_personal_UserName"
            android:layout_toRightOf="@+id/iv_personal_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微光迷失"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black_deep"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_personal_weiXinNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_txt_userid"
            android:layout_toRightOf="@+id/iv_personal_avatar"
            android:layout_below="@+id/tv_personal_UserName"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/rp_arrow_forward"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_personal_image"
        style="@style/personal_txt"
        android:layout_marginTop="20dp"
        android:text="@string/profile_txt_album"
        android:drawableLeft="@drawable/icon_me_photo" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black3"/>
    <TextView
        android:id="@+id/tv_personal_collect"
        style="@style/personal_txt"
        android:text="@string/profile_txt_collect"
        android:drawableLeft="@drawable/icon_me_collect"/>

    <TextView
        android:id="@+id/tv_personal_wallet"
        android:layout_marginTop="20dp"
       style="@style/personal_txt"
        android:text="@string/profile_txt_money"
        android:drawableLeft="@drawable/icon_me_money"/>

    <TextView
        android:id="@+id/tv_personal_smail"
        android:layout_marginTop="20dp"
        style="@style/personal_txt"
        android:text="@string/profile_txt_smail"
        android:drawableLeft="@drawable/icon_me_smail"/>
    <TextView
        android:id="@+id/tv_personal_setting"
       android:layout_marginTop="20dp"
        style="@style/personal_txt"
        android:text="@string/profile_txt_setting"
        android:drawableLeft="@drawable/icon_me_setting"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>